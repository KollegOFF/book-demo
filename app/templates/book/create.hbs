<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">Создание книги: {{title}}</h2>
    <form class="edit-form" onsubmit={{action "saveBook"}}>
      <div class="form-group row">
        <label
          for="inputTitle"
          class="col-sm-2 col-form-label text-right"
        >Название</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control form-control-lg"
            id="inputTitle"
            placeholder="Полное название книги"
            oninput={{action "changeTitle" value="target.value"}}
            value={{title}}
          />
        </div>
      </div>
      <div class="form-group row">
        <label
          for="inputAuthor"
          class="col-sm-2 col-form-label text-right"
        >Автор</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control form-control-lg"
            id="inputAuthor"
            placeholder="Фамилия И.О. автора"
            oninput={{action "changeAuthorName" value="target.value"}}
          />
        </div>
      </div>
      <div class="form-group row">
        <label
          for="inputPagesCount"
          class="col-sm-2 col-form-label text-right"
        >Объем</label>
        <div class="col-sm-10">
          <input
            type="number"
            class="form-control form-control-lg"
            id="inputPagesCount"
            placeholder="Количество страниц книги"
            oninput={{action "changePageCount" value="target.value"}}
          />
        </div>
      </div>
      <div class="form-group row">
        <label
          for="inputDescriptionURL"
          class="col-sm-2 col-form-label text-right"
        >Описание</label>
        <div class="col-sm-10">
          <input
            type="url"
            class="form-control form-control-lg"
            id="inputDescriptionURL"
            placeholder="Ссылка на сайт с описанием книги"
            oninput={{action "changeDescription" value="target.value"}}
          />
        </div>
      </div>
      <div class="form-group row">
        <label
          for="customFile"
          class="col-sm-2 col-form-label text-right"
        >Обложка</label>
        <div class="input-group input-group-lg col-sm-10">
          <div class="custom-file">
            <input
              type="file"
              class="custom-file-input"
              id="customFile"
              lang="ru"
              oninput={{action "changeCover" value="target.value"}}
            />
            <label
              class="custom-file-label form-control-lg placeholder-color"
              for="customFile"
              data-browse="Выбрать"
            >{{if coverURL coverURL "Выберите файл"}}</label>
          </div>
          <div class="input-group-append">
            <button
              class="btn btn-outline-secondary custom-file-clear"
              type="button"
              disabled={{if coverURL false true}}
              onclick={{action "resetCover"}}
            >X</button>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label
          for="inputTags"
          class="col-sm-2 col-form-label text-right"
        >Теги</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="inputPatronymic"
            placeholder="#Теги через запятую"
            oninput={{action "changeTags" value="target.value"}}
          />
          <select multiple="multiple" data-role="tagsinput" id="inputTags">
            <option value="суперкнига" selected="selected">суперкнига</option>
            <option
              value="программирование"
              selected="selected"
            >программирование</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button
            type="submit"
            class="btn btn-primary btn-lg"
          >Сохранить</button>
          <button
            type="submit"
            class="btn btn-outline-secondary btn-lg"
          >Отмена</button>
        </div>
      </div>
    </form>
  </div>
</div>